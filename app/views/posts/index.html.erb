<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user %></td>
        <td><%= post.body %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', polymorphic_path([@postable, post]) %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@postable, post]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([@postable, post]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_polymorphic_path([@postable, Post]) %>
