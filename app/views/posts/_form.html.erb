<%= form_with(model: [postable, post], local: true) do |form| %>
  <% #form.options[:html][:class] << ' mb-2' %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="<%= current_user.gravatar_url(256) %>">
      </p>
    </figure>
    <div class="media-content">
      <div class="field">
        <p class="control">
          <%= form.text_field :title, id: :post_title, class: "input", placeholder: "Add a title..." %>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <%= form.text_area :body, id: :post_body, class: "textarea", placeholder: "Add a comment..." %>
        </p>
      </div>
      <nav class="level">
        <div class="level-left">
          <div class="level-item">

          </div>
        </div>
        <div class="level-right">
          <div class="level-item">
            <%= form.submit class: "button is-info" %>
          </div>
        </div>
      </nav>
    </div>
  </article>
<% end %>
