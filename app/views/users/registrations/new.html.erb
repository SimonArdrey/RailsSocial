<section class="section">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <h1 class="title">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% f.options[:html][:class] << ' mb-2' %>

        <% if resource.errors.any? %>
          <article class="message is-danger">
            <div class="message-body">
              <%= devise_error_messages! %>
            </div>
          </article>
        <% end %>

        <div class="field">
          <%= f.label :first_name, class: "label" %>
          <div class="control">
            <%= f.text_field :first_name, autofocus: true, class: "input", placeholder: "Enter first name" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :last_name, class: "label" %>
          <div class="control">
            <%= f.text_field :last_name, class: "input", placeholder: "Enter last name" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control has-icons-left">
            <%= f.email_field :email, class: "input", "aria-describedby" => "emailHelp", placeholder: "Enter email" %>
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
            <p class="help is-info">We'll never share your email with anyone else</p>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "Password" %>
            <span class="icon is-small is-left">
              <i class="fa fa-key"></i>
            </span>
            <% if @minimum_password_length %>
              <p class="help is-info"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input", placeholder: "Password" %>
            <span class="icon is-small is-left">
              <i class="fa fa-key"></i>
            </span>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Sign Up", class: "button is-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</section>
