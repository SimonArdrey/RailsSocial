<section class="section">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <h1 class="title">Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% f.options[:html][:class] << ' mb-2' %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, class: "input", "aria-describedby" => "emailHelp", placeholder: "Enter email" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "Password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class="control">
              <%= f.label :remember_me, class: "checkbox" do %>
                <%= f.check_box :remember_me, class: "checkbox" %>
                <%= t('helpers.label.remember_me').html_safe %>
              <% end %>
            </div>
          </div>
        <% end -%>

        <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Log in", class: "button is-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</section>
